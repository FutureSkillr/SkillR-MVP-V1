// M5: Firestore Security Rules for Future SkillR
// All user data is scoped to the authenticated user.
// Admin data (prompt_templates, agents) requires the admin custom claim.
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }

    // User profile data — owner only
    match /users/{userId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;
    }

    // Session data — owner only
    match /sessions/{sessionId} {
      allow read, write: if request.auth != null
        && resource == null || resource.data.userId == request.auth.uid;
      allow create: if request.auth != null;
    }

    // Prompt templates — admin only (read-only for authenticated users)
    match /prompt_templates/{promptId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.role == 'admin';
    }

    // Prompt template versions — admin only
    match /prompt_templates/{promptId}/versions/{versionId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.role == 'admin';
    }

    // Agent configs — admin only
    match /agents/{agentId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.role == 'admin';
    }

    // Agent execution logs — admin only
    match /agents/{agentId}/executions/{execId} {
      allow read: if request.auth != null && request.auth.token.role == 'admin';
      allow write: if request.auth != null && request.auth.token.role == 'admin';
    }
  }
}
